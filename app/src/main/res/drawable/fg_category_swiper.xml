<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="?attr/backgroundSecondaryColorTransparent"
                android:endColor="#00000000"
                android:startColor="?attr/backgroundSecondaryColor"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#00000000"
                android:endColor="?attr/backgroundSecondaryColor"
                android:startColor="?attr/backgroundSecondaryColor"
                android:type="linear" />
        </shape>
    </item>
</layer-list>